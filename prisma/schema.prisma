generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(uuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  passwordHash  String?
  bio           String?
  phone         String?
  instagram     String?
  twitter       String?
  location      String?
  walletBalance Int       @default(0)

  // Payout details
  payoutBankName      String?
  payoutAccountNumber String?
  payoutAccountName   String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  createdVibes Vibe[]    @relation("CreatorVibes")
  wonVibes     Vibe[]    @relation("WinnerVibes")
  bids         Bid[]
  payments     Payment[]
  auditLogs    AuditLog[]
  accounts     Account[]
  sessions     Session[]
}

model Account {
  id                String  @id @default(uuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(uuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Vibe {
  id           String   @id @default(uuid())
  title        String
  description  String
  category     String?
  mediaUrl     String?
  weirdness    Int      @default(5)
  startingBid  Int
  minIncrement Int      @default(100)
  currentBid   Int
  status       String   @default("ACTIVE")
  
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  endAt        DateTime
  selectedAt   DateTime?
  paymentDueAt DateTime?

  // Relations
  creatorId    String
  creator      User     @relation("CreatorVibes", fields: [creatorId], references: [id])
  winnerUserId String?
  winner       User?    @relation("WinnerVibes", fields: [winnerUserId], references: [id])
  bids         Bid[]
  payments     Payment[]
}

model Bid {
  id        String   @id @default(uuid())
  amount    Int
  createdAt DateTime @default(now())

  vibeId    String
  vibe      Vibe     @relation(fields: [vibeId], references: [id])
  bidderId  String
  bidder    User     @relation(fields: [bidderId], references: [id])
}

model Payment {
  id         String   @id @default(uuid())
  amount     Int
  feeAmount  Int
  netAmount  Int
  reference  String   @unique
  status     String   @default("INITIATED")
  verifiedAt DateTime?
  createdAt  DateTime @default(now())

  vibeId     String
  vibe       Vibe     @relation(fields: [vibeId], references: [id])
  payerId    String
  payer      User     @relation(fields: [payerId], references: [id])
}

model AuditLog {
  id        String   @id @default(uuid())
  action    String
  meta      String?
  createdAt DateTime @default(now())

  userId    String?
  user      User?    @relation(fields: [userId], references: [id])
}
